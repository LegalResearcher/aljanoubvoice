{
  "version": 2,

  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],

  "routes": [
    {
      "src": "/post/(?<id>.*)",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(TelegramBot|facebookexternalhit|Facebot|facebookcatalog|FacebookBot|Twitterbot|LinkedInBot|WhatsApp|Slackbot|Discordbot|vkShare|Pinterest|redditbot|.*[Bb]ot.*)"
        }
      ],
      "dest": "https://qajnvzxmijetcldztkwl.supabase.co/functions/v1/og-proxy?id=$id"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],

  "crons": [
    {
      "path": "/api/publish-rss",
      "schedule": "*/3 * * * *"
    }
  ]
}

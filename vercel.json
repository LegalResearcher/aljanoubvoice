{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/post/:id",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(TelegramBot|facebookexternalhit|Facebot|facebookcatalog|FacebookBot|Twitterbot|LinkedInBot|WhatsApp|Slackbot|Discordbot|vkShare|Pinterest|redditbot|.*[Bb]ot.*)"
        }
      ],
      "destination": "https://qajnvzxmijetcldztkwl.supabase.co/functions/v1/og-proxy?id=:id"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "crons": [
    {
      "path": "/api/publish-rss",
      "schedule": "*/3 * * * *"
    }
  ]
}

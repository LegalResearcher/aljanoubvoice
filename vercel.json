{
  "rewrites": [
    { 
      "source": "/post/:id",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(facebookexternalhit|Facebot|facebookcatalog|FacebookBot|TelegramBot)"
        }
      ],
      "destination": "/api/og?id=:id"
    },
    {
      "source": "/",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(facebookexternalhit|Facebot|facebookcatalog|FacebookBot|TelegramBot)"
        }
      ],
      "destination": "/api/og"
    },
    { "source": "/(.*)", "destination": "/" }
  ]
}
